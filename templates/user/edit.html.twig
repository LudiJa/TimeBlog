{% extends 'user/_profile.html.twig' %}

{% block content %}
	{% if app.user is same as(user) %}
		<h1>Edit your infos</h1>

		{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

		<a class="btn btn-light text-black my-2" href={{ path('app_user_profile', {'id':app.user.id} ) }}>Back to profile page</a>

		{{ include('user/_delete_form.html.twig') }}

	{% else %}
		<h1>You don't have the rights to access this page</h1>
		<a class="btn btn-light text-black my-2" href={{ path('app_home') }}>Back to home page</a>
	{% endif %}
{% endblock %}
